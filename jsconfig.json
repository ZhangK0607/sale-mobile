{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "*.vue",
    "*.js",
    "pages/**/*",
    "components/**/*", 
    "subpages/**/*",
    "utils/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "unpackage"
  ]
}